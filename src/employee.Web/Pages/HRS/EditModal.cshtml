
@page
@using employee.Localization
@using employee.Web.Pages.HRS
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model EditModalModel
@inject IStringLocalizer<employeeResource> L
@{
    Layout = null;
}
<form asp-page="/HRS/EditModal">
    <abp-modal>
        <abp-modal-header title="@L["Update"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-input asp-for="HR.Id" />
            <abp-input asp-for="HR.Name" />
            <abp-input asp-for="HR.HireDate" />
            <abp-input asp-for="HR.Desc" />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>
